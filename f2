<script>
  // فتح المكتبة
  document.getElementById("open-library").addEventListener("click", function() {
    const sections = document.getElementById("library-sections");
    sections.style.display = sections.style.display === "none" ? "block" : "none";
  });

  // فتح كل نافذة شخصية وإغلاق الباقي
  const persons = document.querySelectorAll(".person");
  persons.forEach(person => {
    person.addEventListener("click", () => {
      const targetId = person.getAttribute("data-target");
      document.querySelectorAll(".person-content").forEach(c => {
        c.style.display = "none";
      });
      document.getElementById(targetId).style.display = "block";
      // تمرير إلى العنصر المفتوح
      document.getElementById(targetId).scrollIntoView({behavior: "smooth", block: "start"});
    });
  });
</script>

