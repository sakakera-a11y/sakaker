<script>
  const birdBtn = document.getElementById('bird-sound-btn');
  const birdAudio = document.getElementById('bird-sound');

  // تشغيل وإيقاف الصوت عند الضغط على الزر
  birdBtn.addEventListener('click', () => {
    if (birdAudio.paused) {
      birdAudio.play();
      birdBtn.textContent = '🔊'; // يمكن تغيير رمز الزر عند التشغيل
    } else {
      birdAudio.pause();
      birdBtn.textContent = '🐦'; // إعادة الرمز عند الإيقاف
    }
  });
</script>

