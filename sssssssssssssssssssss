<script>
function openModal(videoId){
  document.getElementById('videoModal').style.display='flex';
  document.getElementById('videoFrame').src='https://www.youtube.com/embed/'+videoId+'?autoplay=1';
}
function closeModal(){
  document.getElementById('videoModal').style.display='none';
  document.getElementById('videoFrame').src='';
}

// مكتبة
const libraryIcon=document.getElementById('libraryIcon');
const libraryContent=document.getElementById('libraryContent');
libraryIcon.addEventListener('click',()=>{
  libraryContent.style.display = libraryContent.style.display==='none'?'block':'none';
});

// رويات
function showStory(id){
  const stories = document.querySelectorAll('.story');
  stories.forEach(s=>s.style.display='none');
  document.getElementById(id).style.display='block';
}
function backToTitles(){
  const stories = document.querySelectorAll('.story');
  stories.forEach(s=>s.style.display='none');
}

// موسيقى
function openMusicModal(type){
  document.getElementById('musicModal').style.display='flex';
  const content = document.getElementById('musicContent');
  if(type==='arab'){
    content.innerHTML='<iframe width="560" height="315" src="https://www.youtube.com/embed/KKGQrOL6e7Y?si=-7udpKGeUpO2Gpnn" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>';
  } else {
    content.innerHTML='<iframe width="560" height="315" src="https://www.youtube.com/embed/vPg67r76hAA?si=B4bqHxe1XqM-ZOTt" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>';
  }
}
function closeMusicModal(){
  document.getElementById('musicModal').style.display='none';
  document.getElementById('musicContent').innerHTML='';
}
</script>
